{
  "manifest_version": 2,
  "name": "Expert Goggles",
  "description": "Guides for Data Visualizations",
  "version": "1.1",
  "background":
  {
    "page": "HTML/background.html",
    "persisent": false
  },
  "content_scripts":
  [{
    "matches": ["<all_urls>"],
    "js": ["JavaScript/injector.js"],
    "run_at": "document_start"
  },
  {
      "matches": ["<all_urls>"],
      "css": ["CSS/sidebar.css"],
      "js":
      [
          "JavaScript/parser.js",
          "JavaScript/ui_generator.js"
      ],
      "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com/; object-src 'self'",
  "page_action":
  {
      "default_tooltip": "No D3 Visualization Detected",
      "default_title": "Expert Goggles",
      "default_popup": "HTML/default_popup.html"
  },
  "icons":
  {
    "128": "Assets/icon.png"
  },
  "web_accessible_resources": ["Assets/supported_types.json"],
  "permissions":
  [
    "storage",
    "tabs",
    "notifications"
  ]
}